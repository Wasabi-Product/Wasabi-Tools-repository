<LoginWindow>:
    name: "login"

    access: access
    secret: secret
    days: days

    FloatLayout:

        Label:
            text:"Access key: "
            font_size: (root.width**2 + root.height**2) / 13**4.5
            pos_hint: {"x":0.05, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: access
            font_size: (root.width**2 + root.height**2) / 13**4.5
            multiline: False
            write_tab: False
            hint_text: ""
            pos_hint: {"x": 0.35 , "top":0.87}
            size_hint: 0.58, 0.10

        Label:
            text:"Secret Key: "
            font_size: (root.width**2 + root.height**2) / 13**4.5
            pos_hint: {"x":0.05, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: secret
            font_size: (root.width**2 + root.height**2) / 13**4.5
            multiline: False
            password: True
            write_tab: False
            hint_text: ""
            pos_hint: {"x": 0.35, "top":0.67}
            size_hint: 0.58, 0.10

        Label:
            text:"Days: "
            font_size: (root.width**2 + root.height**2) / 13**4.5
            pos_hint: {"x":0.05, "top":0.5}
            size_hint: 0.35, 0.15

        TextInput:
            id: days
            font_size: (root.width**2 + root.height**2) / 13**4.5
            multiline: False
            write_tab: False
            hint_text: "30"
            pos_hint: {"x": 0.35, "top":0.47}
            size_hint: 0.58, 0.10

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4.3
            text: "Compute Egress"

            on_release:
                root.manager.transition.direction = "left"
                root.loginBtn()


<MainWindow>:
    egress: egress
    egress_value: egress_value

    FloatLayout:
        Label:
            id: egress
            font_size: (root.width**2 + root.height**2) / 13**4.5
            pos_hint: {"x":0.38, "top":0.9}
            size_hint: 0.3, 0.10
            text: "Egress: "

        Label:
            id: egress_value
            font_size: (root.width**2 + root.height**2) / 13**4.5
            pos_hint: {"x":0.33, "top":0.6}
            size_hint: 0.35, 0.15
            text: "Value"

        Button:
            font_size: (root.width**2 + root.height**2) / 13**4.5
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Go back"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "right"